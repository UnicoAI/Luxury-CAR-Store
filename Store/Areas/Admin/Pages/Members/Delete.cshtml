@page
@model Store.Areas.Admin.Pages.Members.DeleteModel

@{
    ViewData["Title"] = "Delete User";
}

<div class="card m-auto mb-3" style="max-width: 750px">
    <div class="bg-danger card-header text-center text-white" style="font-size: 1.3rem">
        @ViewData["Title"]
    </div>
    <div class="card-body p-4">
        <h5 class="card-title mb-4">Are you sure you want to delete this user's information?</h5>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserModel.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserModel.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserModel.Username)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserModel.Username)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserModel.Roles)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserModel.Roles)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserModel.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserModel.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserModel.Phone)
            </dt>
            <dd class="col-sm-10">
                @if (Model.UserModel.Phone is null)
                {
                    <span>None</span>
                }
                else
                {
                    @Html.DisplayFor(model => model.UserModel.Phone)
                }
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserModel.IsLockout)
            </dt>
            <dd class="col-sm-10">
                @if (Model.UserModel.IsLockout)
                {
                    <span>Locked</span>
                }
                else
                {
                    <span>No</span>
                }
            </dd>
        </dl>
        <div>
            <form method="post">
                <input asp-for="UserModel.Id" type="hidden" />
                <input class="btn btn-danger" type="submit" value="Delete" /> |
                <a asp-page="./Index">Back to List</a>
            </form>
        </div>
    </div>
</div>
