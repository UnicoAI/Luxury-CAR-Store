<!DOCTYPE html>
<html dir="ltr" lang="en">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>@ViewData["Title"] - Admin Panel</title>
    <link href="~/lib/bootstrap/css/bootstrap.rtl.min.css" rel="stylesheet"/>
    <link asp-append-version="true" href="~/lib/sidebar/style.css" rel="stylesheet"/>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link asp-append-version="true" href="~/css/site.css" rel="stylesheet"/>
    <link asp-append-version="true" href="~/Store.styles.css" rel="stylesheet"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        /* Add more space between off-canvas list items */
        .offcanvas-body .sidebar-items li {
            margin-bottom: 30px; /* Adjust the value as needed */
        }
    </style>
</head>
<body class="text-dark" data-bs-theme="dark">
    <div class="offcanvas offcanvas-start text-light" data-bs-theme="dark" id="demo">
        <div class="offcanvas-header">
            <h1 class="offcanvas-title">Hello, </h1>

            <button type="button" class="btn-close btn-close-light" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <div class="d-flex flex-column gap-2 text-center">
                <a asp-page="/Account/Manage/Index" class="d-flex text-light" style="text-decoration: none;">
                    @User.Identity!.Name
                </a>

            </div>
            <hr class="bg-dark" />
            <ul class="components list-unstyled mb-5 sidebar-items ">
                <li>
                    <a asp-page="/Index" class="d-flex text-light" style="text-decoration: none;">
                        <span class="material-symbols material-symbols-fill mr-3 text-white">
                            grid_view
                        </span>
                        Dashboard
                    </a>
                </li>
                <li>
                    <a asp-page="/ContactUs/Index" class="d-flex text-light" style="text-decoration: none;">
                        <span class="material-symbols material-symbols-fill mr-3 text-white">
                            chat
                        </span>
                        Messages
                    </a>
                </li>
                <li>
                    <a asp-page="/Members/Index" class="d-flex text-light" style="text-decoration: none;">
                        <span class="material-symbols material-symbols-fill mr-3 text-white">
                            group
                        </span>
                        Members
                    </a>
                </li>
                <li>
                    <a asp-page="/Orders/Index" class="d-flex text-light" style="text-decoration: none;">
                        <i class="bi bi-currency-pound"></i>
                       Orders
                    </a>
                </li>
                <li>
                    <a asp-page="/Categories/Index" class="d-flex text-light" style="text-decoration: none;">
                        <span class="material-symbols material-symbols-fill mr-3 text-white">
                            category
                        </span>
                        Categories
                    </a>
                </li>
                <li>
                    <a asp-page="/Products/Index" class="d-flex text-light" style="text-decoration: none;">
                        <span class="material-symbols material-symbols-fill mr-3 text-white">
                            deployed_code
                        </span>
                        Products
                    </a>
                </li>
                <li>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="d-flex text-light" style="text-decoration: none;" style="text-decoration: none;">
                        <span class="material-symbols material-symbols-fill mr-3 text-white">
                            manage_accounts
                        </span>
                        Profile
                    </a>
                </li>
                <li>
                    <a asp-area="" asp-page="/Index" class="d-flex text-light" style="text-decoration: none;">
                        <span class="material-symbols material-symbols-fill mr-3 text-white">
                            home
                        </span>
                        Site Home Page
                    </a>
                </li>
                <li>
                    <a asp-area="Identity" asp-page="/Account/Logout" class="d-flex text-light" style="text-decoration: none;">
                        <span class="material-symbols material-symbols-fill mr-3 text-white">
                            logout
                        </span>
                        Logout
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="container-fluid mt-3">
        <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#demo" style="position: fixed; top: 10px; left: 5px; z-index: 1000;">
            <i class="bi bi-menu-button-wide-fill"></i>Admin Dashboard
        </button>
        <!-- Page Content  -->
    <div class="p-4 p-md-5 pt-3 pt-md-4" id="content">
            @RenderBody()
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/popper/popper.min.js"></script>
<script asp-append-version="true" src="~/lib/sidebar/main.js"></script>
<script asp-append-version="true" src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
