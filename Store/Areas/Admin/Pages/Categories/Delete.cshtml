@page
@model Store.Areas.Admin.Pages.Categories.DeleteModel

@{
    ViewData["Title"] = "Delete Category";
}

<div class="card m-auto" style="max-width: 700px">
    <div class="bg-danger card-header text-center text-white" style="font-size: 1.1rem">@ViewData["Title"]</div>
    <div class="card-body p-4">
        <h5 class="card-title">Are you sure you want to delete «@Model.Category.Name» ?</h5>
        <div>
            <hr/>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.Name)
                </dd>
            </dl>

            <form method="post">
                <input asp-for="Category.Id" type="hidden"/>
                <input class="btn btn-danger" type="submit" value="Delete"/> |
                <a asp-page="./Index">Back to the list</a>
            </form>
        </div>
    </div>
</div>