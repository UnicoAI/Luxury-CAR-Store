@page
@model Store.Areas.Admin.Pages.Categories.CreateModel

@{
    ViewData["Title"] = "Create New Category";
}

<div class="card m-auto" style="max-width: 700px">
    <div class="card-header text-center" style="font-size: 1.1rem">Create Category</div>
    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-6">
                <form class="d-flex flex-column gap-3" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Category.Name" class="control-label"></label>:
                        <input asp-for="Category.Name" class="form-control" />
                        <span asp-validation-for="Category.Name" class="text-danger"></span>
                    </div>
                    <div class="align-items-center d-flex flex-row form-group gap-3">
                        <input class="btn btn-primary" type="submit" value="Create New Category" />
                        <div>
                            <a asp-page="./Index">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
