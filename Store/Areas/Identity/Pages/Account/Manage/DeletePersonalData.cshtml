@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Information";
}

<div class="card m-auto" style="max-width: 600px">
    <div class="card-header py-3 text-center" style="font-size: 1.1rem">
        @ViewData["Title"]
    </div>
    <div class="alert alert-warning align-items-center d-flex justify-content-center" role="alert">
        <p class="m-0 ">
            <strong>Deleting this information will be permanent and irreversible.</strong>
        </p>
    </div>
    <div class="card-body m-auto p-5" style="max-width: 400px; width: 100%;">
        <form id="delete-user" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            @if (Model.RequirePassword)
            {
                    <div class="form-floating mb-3">
                        <input aria-required="true" asp-for="Input.Password" autocomplete="current-password" class="form-control" placeholder="Password"/>
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
            }
            <button class="btn btn-danger btn-lg w-100" type="submit">Delete Information and Account</button>
        </form>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial"/>
}
