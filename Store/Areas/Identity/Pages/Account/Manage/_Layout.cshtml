@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        /* Add more space between off-canvas list items */
        .offcanvas-body .sidebar-items li {
            margin-bottom: 30px; /* Adjust the value as needed */
        }
    </style>
</head>
<body class="text-dark" data-bs-theme="dark">
    <div class="offcanvas offcanvas-start text-light" data-bs-theme="dark" id="demo">
        <div class="offcanvas-header">
            <h1 class="offcanvas-title">Hello, </h1>
           
            <button type="button" class="btn-close btn-close-light" data-bs-dismiss="offcanvas"></button>
        </div>
        <div class="offcanvas-body">
            <div class="d-flex flex-column gap-2 text-center">
                <a asp-page="/Account/Manage/Index" class="d-flex text-light" style="text-decoration: none;">
                    @User.Identity!.Name
                </a>
               
            </div>
            <hr class="bg-dark" />
            <ul class="components list-unstyled mb-5 sidebar-items ">
                <li>
                    <a asp-page="/Account/Manage/Index" class="d-flex text-light" style="text-decoration: none;">
                        <i class="bi bi-person-circle"></i>
                        Personal Information
                    </a>
                </li>
                <li>
                    <a asp-page="/Account/Manage/Orders/Index" class="d-flex text-light" style="text-decoration: none;">
                        <i class="bi bi-currency-pound"></i>
                        My Orders
                    </a>
                </li>
                <li>
                    <a asp-page="/Account/Manage/ChangePassword" class="d-flex text-light" style="text-decoration: none;">
                        <i class="bi bi-lock"></i>
                        Password
                    </a>
                </li>
                <li>
                    <a asp-page="/Account/Manage/PersonalData" class="d-flex text-light " style="text-decoration: none;">
                        <i class="bi bi-trash"></i>
                        Delete Account
                    </a>
                </li>
                <li >
                    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" class="form-inline" method="post">
                        <button class="btn btn-outline-light" type="submit"><i class="bi bi-power"></i>Logout</button>
                    </form>
                </li>
            </ul>
        </div>
    </div>

    <div class="container-fluid mt-3">
        <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#demo" style="position: fixed; top: 100px; left: 5px; z-index: 1000;">
            <i class="bi bi-menu-button-wide-fill"></i>Dashboard
        </button>
        <!-- Page Content  -->
        <div class="p-4 p-md-5 pt-5" id="content">
            @RenderBody()
        </div>
    </div>

    @section Scripts {
        @RenderSection("Scripts", required: false)
    }
   
</body>
</html>
