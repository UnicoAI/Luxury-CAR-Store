@page
@model IndexModel
@{
    ViewData["Title"] = "User Information";
}

<div class="card m-auto" style="max-width: 750px">
    <div class="card-header text-center">
        <h3 style="font-size: 1.3rem">@ViewData["Title"]</h3>
    </div>
    <partial for="StatusMessage" name="_StatusMessage"/>
    <div class="card-body p-4">
        <div class="m-auto" style="max-width: 400px">
            <form id="profile-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control" disabled/>
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email"/>
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number"/>
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <button class="btn btn-lg btn-primary w-100" id="update-profile-button" type="submit">Save</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial"/>
}
