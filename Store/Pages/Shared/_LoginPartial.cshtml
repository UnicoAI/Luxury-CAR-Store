@using Microsoft.AspNetCore.Identity
@using Store.Areas.Identity
@inject SignInManager<IdentityUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="align-items-center d-flex nav-item">
            @if (User.IsInRole(Roles.Admin))
            {

                <a asp-area="Admin" asp-page="/Index" class="btn btn-outline text-light">
                        <i class="bi bi-speedometer2"></i> Admin Dashboard
                    </a>
                
            }
            else
            {
                 <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-outline text-light">
                            <span class="material-symbols material-symbols-fill mr-3 text-light">
                                person
                            </span>
                            Hello @User.Identity?.Name
                        </a>
                     
                      <!--  <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" class="form" method="post">
                            <button class="btn btn-outline text-light" type="submit"><i class="bi bi-power"></i>Logout</button>
                        </form> -->

            }
        </li>
       
    }
    else
    {
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Register" class="nav-link text-white"><i class="bi bi-journal-text"></i> Register</a>
        </li>
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-white"><i class="bi bi-door-open"></i> Login</a>
        </li>
    }
</ul>
